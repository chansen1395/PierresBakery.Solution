@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h4>Add a new flavor</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.FlavorName)
  @Html.TextBoxFor(model => model.FlavorName)

  @Html.Label("Select treat")
  @Html.DropDownList("TreatId")

  <input type="submit" value="Add new flavor" class="btn btn-default" />
}
<div id="footer">
  <button  class="bottom">@Html.ActionLink("Show all flavors", "Index")</button>
</div>