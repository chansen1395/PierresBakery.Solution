@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

<h4>Add a new Treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)
  <input type="submit" value="Add new treat" />
}

<div id="footer">
  <button class="bottom">@Html.ActionLink("Show all treats", "Index")</button>
</div>