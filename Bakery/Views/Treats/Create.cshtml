@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

@if (User.Identity.IsAuthenticated)
{
  <nav id="navbar">
    <button>Signed in as @User.Identity.Name.
      @using (Html.BeginForm("LogOff", "Account"))
      {
        <input type="submit" class="btn btn-danger" value="Log out" />
      }
    </button>
  </nav>
  <hr>
}

<h4>Add a new Treat</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)
  <input type="submit" value="Add new treat" />
}

<div id="footer">
  <button class="bottom">@Html.ActionLink("Show all treats", "Index")</button>
</div>