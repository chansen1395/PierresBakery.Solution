@{
  Layout = "_Layout";
}

@model Bakery.Models.Treat

@if (User.Identity.IsAuthenticated)
{
  <nav id="navbar">
    <button>Signed in as @User.Identity.Name.
      @using (Html.BeginForm("LogOff", "Account"))
      {
        <input type="submit" class="btn btn-danger" value="Log out" />
      }
    </button>
  </nav>
  <hr>
}

<h2>Add a flavor</h2>

<h4>Add a flavor to this treat: @Html.DisplayFor(model => model.TreatName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.TreatId)

  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Save" />
}
<div id="footer">
  <button  class="bottom">@Html.ActionLink("Cancel", "Details", new { id = Model.TreatId })</button>
  <button  class="bottom">@Html.ActionLink("Back to Treats", "Index")</button>
</div>